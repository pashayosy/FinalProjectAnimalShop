@using FinalProjectAnimalShop.Models
@model IEnumerable<Animal>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1 class="display-4">Welcome to the Pet Shop</h1>
    <p class="lead">Here are the top commented animals:</p>
</div>

<div class="row">
    @foreach (var animal in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="@animal.PictureUrl" alt="@animal.Name">
                <div class="card-body">
                    <h5 class="card-title">@animal.Name</h5>
                    <p class="card-text">@animal.Description</p>
                    <p class="card-text"><small class="text-muted">Age: @animal.Age</small></p>
                    <a href="@Url.Action("Details", "Animal", new { id = animal.AnimalId })" class="btn btn-primary">View
                        Details</a>
                </div>
            </div>
        </div>
    }
</div>
