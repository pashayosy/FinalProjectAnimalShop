@using FinalProjectAnimalShop.Models
@model IEnumerable<Animal>

<div class="container">
    <h1 class="my-4">Welcome to the Pet Shop</h1>
    <h2>Top Commented Animals</h2>
    <div class="row">
        @foreach (var animal in Model)
        {
            <div class="col-md-6">
                <div class="card mb-4">
                    <img class="card-img-top" src="@animal.PictureUrl" alt="@animal.Name">
                    <div class="card-body">
                        <h5 class="card-title">@animal.Name</h5>
                        <p class="card-text">@animal.Description</p>
                        <a href="@Url.Action("Details", "Animal", new { id = animal.AnimalId })"
                            class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
